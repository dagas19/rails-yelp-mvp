<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h1><%= @restaurant.name %></h1>
      <hr>
      <p> Address: <%= @restaurant.address %> </p>
      <hr>
      <p> Phone: <%= @restaurant.phone_number %> </p>
      <hr>
      <p> Category: <%= @restaurant.category %> </p>
      <hr>
      <h4>Reviews: </h4>
      <% @reviews.each do |review| %>
      <ul class="text-decoration-none">
        <li class="text-decoration-none"> <%= review.content %> Rating:
              <% review.rating.times do %> <i class="fas fa-star"></i> <% end %>
              <% (5 - review.rating).times do %> <i class="far fa-star"></i> <% end %>
           </li>
          </ul>
      <% end %>
   <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: [1,2,3,4,5] %>
          <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>
        <div class="btn btn-success">
        <%= link_to "home", restaurants_path %>
        </div>
    </div>
  </div>
</div>


